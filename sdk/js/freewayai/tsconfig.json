{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "rootDir": "./src",
    "typeRoots": ["./node_modules/@types", "./types"],
    "declaration": true
  },
  "include": ["src/**/*", "./types/**/*"]
  
}
